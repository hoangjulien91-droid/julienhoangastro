---
import { GraduationCap, Shield } from 'lucide-react';
import { PROFILE, type Credential } from '@/lib/data/profile';

// Using React Lucide icons in Astro (Server-only rendering)
---

<section class='glass animate-in animate-in-delay-1 rounded-3xl p-8'>
  <div class='mb-6 flex items-center gap-3'>
    <div class='bg-primary/10 flex h-10 w-10 items-center justify-center rounded-xl'>
      <GraduationCap className='text-primary h-5 w-5' />
    </div>
    <h3 class='text-xl font-bold'>Formation & Agr√©ments</h3>
  </div>

  <ul class='space-y-4'>
    {PROFILE.credentials.map((credential: Credential) => (
      <li class='flex items-start gap-3'>
        {credential.type === 'certification' ? (
          <Shield className='text-primary mt-1 h-4 w-4 shrink-0' />
        ) : (
          <div class='border-primary/50 mt-1 h-4 w-4 shrink-0 rounded-full border-2' />
        )}
        <div>
          <p class='font-semibold'>{credential.title}</p>
          <p class='text-muted-foreground text-sm'>{credential.institution}</p>
        </div>
      </li>
    ))}
  </ul>
</section>
